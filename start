pipeline {
    agent any
    environment {
        AWS_DEFAULT_REGION="us-east-1"
    }
    stages {
        stage('Start AWS EC2 Instance') {
            steps {
                sh 'chmod +x start-ec2.sh'
                sh './start-ec2.sh'
            }
        }
        stage('Start Selenium Grid in the EC2 Instance') {
            steps {
                sshagent (credentials: ['selenium-ec2']){
                     // Transfer docker-compose file to EC2 instance
                    sh 'scp -o StrictHostKeyChecking=no docker-compose.yml ec2-user@172.31.40.62:/tmp'
                     // SSH into EC2 instance and start Docker
                    sh 'ssh -o StrictHostKeyChecking=no ec2-user@172.31.40.62 "docker-compose -f /tmp/docker-compose.yml up -d"'
                }
            }
        }
    }
}
